<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:fitsSystemWindows="true"
    android:paddingTop="24dp">

    <!-- Contenedor para los tabs superiores -->
    <LinearLayout
        android:id="@+id/topTabsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tabFaseGrupos"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Fase de grupos"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:background="@drawable/tab_selected_background"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/tabBracketStage"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Bracket Stage"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:background="@drawable/tab_unselected_background"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Contenedor para el contenido dinÃ¡mico (FaseGrupos o BracketStage) -->
    <FrameLayout
        android:id="@+id/grupos_content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>