<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="4dp">

    <!-- PosiciÃ³n -->
    <TextView
        android:id="@+id/tvPosicion"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center" />

    <!-- Icono del equipo -->
    <ImageView
        android:id="@+id/ivIconoEquipo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_equipo_default"
        android:scaleType="centerCrop" />

    <!-- Nombre del equipo -->
    <TextView
        android:id="@+id/tvNombreEquipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:text="Equipo 1"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <!-- Partidos -->
    <TextView
        android:id="@+id/tvPartidos"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center" />

    <!-- Gol diferencia -->
    <TextView
        android:id="@+id/tvGolDiferencia"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center" />

    <!-- Puntos -->
    <TextView
        android:id="@+id/tvPuntos"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center" />

</LinearLayout>